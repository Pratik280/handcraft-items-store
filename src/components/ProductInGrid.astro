--- 
import Button from '../components/Button.astro'
const { name, price, imgName } = Astro.props;
---
<a href=#>
  <div class="bg-clr-primary-accent hover:cursor-pointer overflow-hidden">
    <picture class="w-full overflow-hidden">
      <img class="block h-72 object-cover aspect-square w-full hover:scale-105 transition-transform hover:grayscale" src={imgName} alt="" />
    </picture>
    <div class="p-4">
    <p class="text-slate-200 text-lg my-1">{name}</p>
    <div class="mt-4 mb-2 flex flex-row justify-between items-center">
      <p class="text-slate-200 text-lg text-center my-2">Rs. {price}</p>
      <Button btnText={"Buy Now"}/>
    </div>
    </div>
  </div>
</a>